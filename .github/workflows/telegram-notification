name: Telegram Notification

on:
  workflow_dispatch:
  push:
    branches:
      - release 

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Send a Telegram message
      env:
        TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
        TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
      run: |
        curl -s -X POST https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage -d chat_id=${TELEGRAM_CHAT_ID} -d text="Новая версия приложения уже доступна!"
